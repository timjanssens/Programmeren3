@page "{id}"
@model BiblioAdmin.Pages.OrderStatus.ReadingOneModel
@{
    ViewData["Title"] = "Orderstatus - Read";
}

<section>

    <div class="navSection">
        <h1>Order status details</h1>
        <div class="linksNavigatie">
            <a class="linkAsButton" href="/OrderStatus/UpdatingOne/@Model.OrderStatus.Id">
                Update
            </a>
            <a class="linkAsButton" href="/OrderStatus/InsertingOne" class="tile">
                Insert
            </a>
            <a asp-page="./ReadingOne" onclick="return confirm('Weet je zeker dat je deze order status wilt deleten?');"
               asp-page-handler="Delete" asp-route-id="@Model.OrderStatus.Id" class="linkAsButton">Delete</a>
            <a class="linkAsButton" href="/OrderStatus/Index">
                Cancel
            </a>
        </div>
    </div>
    <fieldset>
        <div class="row">
            <div class="col-25">
                <label asp-for="OrderStatus.Id">ID</label>
            </div>
            <div class="col-75">
                <input asp-for="OrderStatus.Id" readonly=" @(true)" />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label asp-for="OrderStatus.Name">Naam  *</label>
            </div>
            <div class="col-75">
                <input asp-for="OrderStatus.Name" required="required" readonly=" @(true)" />
            </div>
            <span class="alert-danger" asp-validation-for="OrderStatus.Name"></span>
        </div>
        <div>
            <div class="row">
                <div class="col-25">
                    <label asp-for="OrderStatus.Description">Beschrijving</label>
                </div>
                <div class="col-75">
                    <textarea asp-for="OrderStatus.Description" readonly=" @(true)"></textarea>
                </div>
            </div>
        </div>
    </fieldset>
</section>
<partial name="OrderStatus/_ReadingAll" model="Model.OrderStatusList" />
