@page "{id}"
@model BiblioAdmin.Pages.OrderItem.ReadingOneModel
@{
}



<h1>Order Item ReadingOne</h1>
<nav class="control-panel">
    <a href="/Index">
        <span>Hier komt het logo</span>
    </a>
    <h1 class="banner">Biblio Admin</h1>
</nav>
<div class="show-room entity">
    <div class="detail">
        <div class="command-panel">
            <h2>Order Item</h2>
            <a href="/OrderItem/UpdatingOne/@Model.OrderItem.Id" class="tile">
                <span class="icon-pencil"></span>
                <span class="screen-reader-text">Updating One</span>
            </a>
            <a href="/OrderStatus/InsertingOne" class="tile">
                <span class="icon-plus"></span>
                <span class="screen-reader-text">Inserting One</span>
            </a>
            <a asp-page="./ReadingOne" onclick="return confirm('Weet je zeker dat je dit orderitem wilt deleten?');"
               asp-page-handler="Delete" asp-route-id="@Model.OrderItem.Id">Delete</a>
            <a href="/OrderItem/Cancel" class="tile">
                <span class="icon-close"></span>
                <span class="screen-reader-text">Annuleren</span>
            </a>
        </div>
        <fieldset>
            <div>
                <label for="OrderItem-Id">Id</label>
                <input id="OrderItem-Id" name="OrderItem-Id" type="text" value="@Model.OrderItem.Id" readonly>
            </div>
            <div>
                <label for="OrderItem-BookId">Naam</label>
                <input id="OrderItem-BookId" name="OrderItem-BookId" type="text" value="@Model.OrderItem.Book.Author" readonly>
            </div>
            <div>
                <label for="OrderItem-OrderId">Order Nummer</label>
                <input id="OrderItem-OrderId" name="OrderItem-OrderId" type="text" value="@Model.OrderItem.OrderId" readonly>
            </div>
            <div>
                <label for="OrderItem-Quantity">Hoeveelheid</label>
                <input id="OrderItem-Quantity" name="OrderItem-Quantity" type="text" value="@Model.OrderItem.Quantity" readonly>
            </div>
        </fieldset>
        <div class="feedback"></div>
    </div>
    <partial name="OrderItem/_ReadingAll" model="Model.OrderItemList" />
</div>