@page
@model BiblioAdmin.Pages.OrderItem.IndexModel
@{
}


<h1>Order Item</h1>

<a href="/OrderItem/InsertingOne" class="tile">
    <span class="icon-plus"></span>
    <span class="screen-reader-text">Inserting One</span>
</a>

<table class="list">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Book
            </th>
            <th>
                Order nummer
            </th>
            <th>
                Hoeveelheid
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItemList)
        {
        <tr>
            <td>
                <a href="OrderItem/ReadingOne/@item.Id">Select</a> |
            </td>
            <td>
                @item.Id
            </td>
            <td>
                @item.BookId
            </td>
            <td>
                @item.OrderId
            </td>
            <td>
                @item.Quantity
            </td>
        </tr>
        }
    </tbody>
</table>