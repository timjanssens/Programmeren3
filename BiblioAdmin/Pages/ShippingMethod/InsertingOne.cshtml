@page
@model BiblioAdmin.Pages.ShippingMethod.InsertingOneModel
@{
}

<section>
    <h3>Inserting Shipping Method</h3>
    <hr />
    <br />
    <form method="post">
        <fieldset>
            <div>
                <label asp-for="ShippingMethod.Name"></label>
                <input asp-for="ShippingMethod.Name" required="required" />
                <span class="alert-danger" asp-validation-for="ShippingMethod.Name"></span>
            </div>
            <div>
                <label asp-for="ShippingMethod.Description"></label>
                <input asp-for="ShippingMethod.Description" required="required" />
                <span class="alert-danger" asp-validation-for="ShippingMethod.Description"></span>
            </div>
            <div>
                <label asp-for="ShippingMethod.Price"></label>
                <input asp-for="ShippingMethod.Price" required="required" />
                <span class="alert-danger" asp-validation-for="ShippingMethod.Price"></span>
            </div>

        </fieldset>
        <div>
            <button type="submit" value="Insert" asp-page-handler="Insert">Insert</button>
        </div>
    </form>
</section>
<partial name="ShippingMethod/_ReadingAll" model="Model.ShippingMethodList" />