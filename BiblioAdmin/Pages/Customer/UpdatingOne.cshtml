@page "{id}"
@model BiblioAdmin.Pages.Customer.UpdatingOneModel
@{
}


<h3>Updating Customer</h3>
<hr />
<br />
<form method="post">
    <fieldset>
        <div>
            <label asp-for="Customer.Id"></label>
            <input asp-for="Customer.Id" readonly=" @(true)" />
            <span class="alert-danger" asp-validation-for="Customer.Id"></span>
        </div>
        <div>
            <label asp-for="Customer.FirstName"></label>
            <input asp-for="Customer.FirstName" />
            <span class="alert-danger" asp-validation-for="Customer.Id"></span>
        </div>
        <div>
            <label asp-for="Customer.LastName"></label>
            <input asp-for="Customer.LastName" />
            <span class="alert-danger" asp-validation-for="Customer.LastName"></span>
        </div>
        <div>
            <label asp-for="Customer.Address"></label>
            <input asp-for="Customer.Address" />
            <span class="alert-danger" asp-validation-for="Customer.Address"></span>
        </div>
        <div>
            <label asp-for="Customer.City"></label>
            <input asp-for="Customer.City" />
            <span class="alert-danger" asp-validation-for="Customer.City"></span>
        </div>
        <div>
            <label asp-for="Customer.PostalCode"></label>
            <input asp-for="Customer.PostalCode" />
            <span class="alert-danger" asp-validation-for="Customer.PostalCode"></span>
        </div>
        <div>
            <label asp-for="Customer.Country"></label>
            <input asp-for="Customer.Country" />
            <span class="alert-danger" asp-validation-for="Customer.Country"></span>
        </div>
        <div>
            <label asp-for="Customer.Phone"></label>
            <input asp-for="Customer.Phone" />
            <span class="alert-danger" asp-validation-for="Customer.Phone"></span>
        </div>
    </fieldset>
    <div>
        <button type="submit" value="Update" asp-page-handler="Update">Update</button>
    </div>
</form>

<partial name="Customer/_ReadingAll" model="Model.CustomerList" />