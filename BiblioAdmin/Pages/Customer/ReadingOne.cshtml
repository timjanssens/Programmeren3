@page "{id}"
@model BiblioAdmin.Pages.Customer.ReadingOneModel
@{
}

<section>
    <div class="navSection">
        <h1>Customer details</h1>
        <div class="linksNavigatie">
            <a class="linkAsButton" href="/Customer/UpdatingOne/@Model.Customer.Id">
                Update
            </a>
            <a class="linkAsButton" href="/Customer/InsertingOne" class="tile">
                Insert
            </a>
            <a asp-page="./ReadingOne" onclick="return confirm('Weet je zeker dat je deze customer wilt deleten?');"
               asp-page-handler="Delete" asp-route-id="@Model.Customer.Id" class="linkAsButton">Delete</a>
            <a class="linkAsButton" href="/Customer/Index">
                Cancel
            </a>
        </div>
    </div>
    <fieldset>
        <div>
            <label for="Customer-Id">Id</label>
            <input id="Customer-Id" name="Customer-Id" type="text" value="@Model.Customer.Id" readonly>
        </div>
        <div>
            <label for="Customer-FirstName">Voornaam</label>
            <input id="Customer-FirstName" name="Customer-FirstName" type="text" value="@Model.Customer.FirstName" readonly>
        </div>
        <div>
            <label for="Customer-LastName">Naam</label>
            <input id="Customer-LastName" name="Customer-LastName" type="text" value="@Model.Customer.LastName" readonly>
        </div>
        <div>
            <label for="Customer-Address">Adres</label>
            <input id="Customer-Address" name="Customer-Address" type="text" value="@Model.Customer.Address" readonly>
        </div>
        <div>
            <label for="Customer-City">Stad</label>
            <input id="Customer-City" name="Customer-City" type="text" value="@Model.Customer.City" readonly>
        </div>
        <div>
            <label for="Customer-PostalCode">Postcode</label>
            <input id="Customer-PostalCode" name="Customer-PostalCode" type="text" value="@Model.Customer.PostalCode" readonly>
        </div>
        <div>
            <label for="Customer-Country">Land</label>
            <input id="Customer-Country" name="Customer-Country" type="text" value="@Model.Customer.Country" readonly>
        </div>
        <div>
            <label for="Customer-Phone">Telefoonnummer</label>
            <input id="Customer-Phone" name="Customer-Phone" type="text" value="@Model.Customer.Phone" readonly>
        </div>
    </fieldset>

</section>
    <partial name="Customer/_ReadingAll" model="Model.CustomerList" />
