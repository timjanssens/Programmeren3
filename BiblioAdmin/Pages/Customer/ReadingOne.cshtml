@page "{id}"
@model BiblioAdmin.Pages.Customer.ReadingOneModel
@{
    ViewData["Title"] = "Customer - Read";
}

<section>
    <div class="navSection">
        <h1>Customer details</h1>
        <div class="linksNavigatie">
            <a class="linkAsButton" href="/Customer/UpdatingOne/@Model.Customer.Id">
                Update
            </a>
            <a class="linkAsButton" href="/Customer/InsertingOne" class="tile">
                Insert
            </a>
            <a asp-page="./ReadingOne" onclick="return confirm('Weet je zeker dat je deze customer wilt deleten?');"
               asp-page-handler="Delete" asp-route-id="@Model.Customer.Id" class="linkAsButton">Delete</a>
            <a class="linkAsButton" href="/Customer/Index">
                Cancel
            </a>
        </div>
    </div>
    <fieldset>
        <div class="row">
            <div class="col-25">
                <label for="Customer-Id">Id</label>
            </div>
            <div class="col-75">
                <input asp-for="Customer.Id" readonly=" @(true)" >
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label asp-for="Customer.FirstName">Voornaam *</label>
            </div>
            <div class="col-75">
                <input asp-for="Customer.FirstName"  readonly=" @(true)" />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label asp-for="Customer.LastName">Familienaam *</label>
            </div>
            <div class="col-75">
                <input asp-for="Customer.LastName"  readonly=" @(true)"  />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label asp-for="Customer.Email">E-mail *</label>
            </div>
            <div class="col-75">
                <input asp-for="Customer.Email"  readonly=" @(true)"  />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label asp-for="Customer.Address">Adres</label>
            </div>
            <div class="col-75">
                <input asp-for="Customer.Address"  readonly=" @(true)" />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label asp-for="Customer.City">Stad *</label>
            </div>
            <div class="col-75">
                <input asp-for="Customer.City"  readonly=" @(true)"  />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label asp-for="Customer.PostalCode">Postcode</label>
            </div>
            <div class="col-75">
                <input asp-for="Customer.PostalCode"  readonly=" @(true)" />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label asp-for="Customer.Country">Land</label>
            </div>
            <div class="col-75">
                <input asp-for="Customer.Country"  readonly=" @(true)" />
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label asp-for="Customer.Phone">Telefoon</label>
            </div>
            <div class="col-75">
                <input asp-for="Customer.Phone"  readonly=" @(true)" />
            </div>
        </div>
    </fieldset>

</section>
<partial name="Customer/_ReadingAll" model="Model.CustomerList" />
